@{
    ViewData["Title"] = "Pagina Amministratore";
}

<h2>@ViewData["Title"]</h2>
<p>Benvenuto nella dashboard dell'amministratore.</p>

<div class="d-flex justify-content-center gap-3">
        <a class="button text-decoration-none" asp-area="" asp-antifo=""
        asp-controller="User" asp-action="CreateAdmin">Crea nuovo utente</a>
    <a class="button text-decoration-none" asp-area="" asp-antifo=""
       asp-controller="Animali" asp-action="Create">Nuovo Animale</a>
        <a class="button text-decoration-none" asp-area="" asp-antifo=""
        asp-controller="Prodotto" asp-action="Create">Aggiungi Prodotto</a>
        <a class="button text-decoration-none" asp-area="" asp-antifo=""
        asp-controller="Prodotto" asp-action="IndexProdotti">Visualizza Prodotti</a>
        <a class="button text-decoration-none text-center" asp-area="" asp-antifo=""
        asp-controller="Prodotto" asp-action="IndexCaseFarmaceutiche">
         Visualizza<br>Case Farmaceutiche
         </a>
        <a class="button text-decoration-none" asp-area="" asp-antifo=""
        asp-controller="Prodotto" asp-action="RicercaProdotto">Ricerca Prodotto</a>
</div>

