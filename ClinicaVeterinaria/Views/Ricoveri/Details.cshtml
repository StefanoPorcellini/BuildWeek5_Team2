@model ClinicaVeterinaria.Models.Ricovero

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ricovero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataInizio)
        </dt>
        <dd class="col-sm-10">
            @Model.DataInizio.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFine)
        </dt>
        <dd class="col-sm-10">
            @(Model.DataFine.HasValue ? Model.DataFine.Value.ToString("dd/MM/yyyy") : "In Corso")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Animale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Animale.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rimborso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rimborso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CostoGiornaliero)
        </dt>
        <dd class="col-sm-10">
            @Model.CostoGiornaliero.ToString("C")
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Modifica</a> |
    <a asp-action="Index" class="btn btn-info">Torna alla lista</a> |
    <!-- Pulsante per il checkout -->
    <a asp-action="Checkout" asp-route-id="@Model?.Id" class="btn btn-primary">Checkout</a>
</div>
