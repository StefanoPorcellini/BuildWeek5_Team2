@model ClinicaVeterinaria.Models.Ricovero

@{
    ViewData["Title"] = "Modifica";
}

<h1><img src="~/img/logo piccolo.svg" /> @ViewData["Title"]</h1>

<h4>Ricovero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataInizio" class="control-label"></label>
                <input asp-for="DataInizio" type="date" class="form-control" />
                <span asp-validation-for="DataInizio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFine" class="control-label"></label>
                <input asp-for="DataFine" type="date" class="form-control" />
                <span asp-validation-for="DataFine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimaleId" class="control-label"></label>
                <select asp-for="AnimaleId" class="form-control" asp-items="ViewBag.AnimaleId"></select>
                <span asp-validation-for="AnimaleId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Rimborso" /> @Html.DisplayNameFor(model => model.Rimborso)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CostoGiornaliero" class="control-label"></label>
                <input asp-for="CostoGiornaliero" class="form-control" />
                <span asp-validation-for="CostoGiornaliero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index"><i class="bi bi-arrow-left-short"></i>Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
