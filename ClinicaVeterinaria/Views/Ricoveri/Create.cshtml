@model ClinicaVeterinaria.Models.Ricovero

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ricovero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataInizio" class="control-label"></label>
                <input asp-for="DataInizio" type="date" class="form-control" />
                <span asp-validation-for="DataInizio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimaleId" class="control-label"></label>
                <select asp-for="AnimaleId" class ="form-control" asp-items="ViewBag.AnimaleId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Rimborso" /> @Html.DisplayNameFor(model => model.Rimborso)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CostoGiornaliero" class="control-label"></label>
                <input asp-for="CostoGiornaliero" class="form-control" />
                <span asp-validation-for="CostoGiornaliero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info my-2" asp-action="Index">Torna alla lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
