@model ClinicaVeterinaria.Models.Animale

@{
    ViewData["Title"] = "Visualizza Dati Animale e Proprietario";
}

<h1>Dettagli Animale e Proprietario</h1>

<h2>Dati Animale</h2>
<div class="form-group">
    <label>Nome:</label>
    <p>@Model.Nome</p>
</div>
<div class="form-group">
    <label>Tipologia Animale:</label>
    <p>@Model.TipologiaAnimale</p>
</div>
<div class="form-group">
    <label>Colore Manto:</label>
    <p>@Model.ColoreManto</p>
</div>
<div class="form-group">
    <label>Data di Nascita:</label>
    <p>@Model.DataNascita?.ToString("dd/MM/yyyy")</p>
</div>
<div class="form-group">
    <label>Possiede Chip:</label>
    <p>@(Model.PossiedeChip ? "Sì" : "No")</p>
</div>


<div class="form-group">
    <label>Colore Manto:</label>
    <p>@Model.ProprietarioId</p>
</div>


@if (Model.PossiedeChip)
{
    <div class="form-group">
        <label>Numero Chip:</label>
        <p>@Model.NumeroChip</p>
    </div>
}
<div class="form-group">
    <label>Randagio:</label>
    <p>@(Model.Randagio ? "Sì" : "No")</p>
</div>

@if (!string.IsNullOrEmpty(Model.Foto))
{
    <div class="form-group">
        <label>Foto:</label>
        <img src="~/@Model.Foto" alt="Foto Animale" class="img-fluid" />
    </div>
}

<h2>Dati Proprietario</h2>
@if (Model.Proprietario != null)
{
    <div class="form-group">
        <label>Nome:</label>
        <p>@Model.Proprietario.Nome</p>
    </div>
    <div class="form-group">
        <label>Cognome:</label>
        <p>@Model.Proprietario.Cognome</p>
    </div>
    <div class="form-group">
        <label>Telefono:</label>
        <p>@Model.Proprietario.Telefono</p>
    </div>
    <div class="form-group">
        <label>Indirizzo:</label>
        <p>@Model.Proprietario.Indirizzo</p>
    </div>
    <div class="form-group">
        <label>Città:</label>
        <p>@Model.Proprietario.Citta</p>
    </div>
    <div class="form-group">
        <label>Codice Fiscale:</label>
        <p>@Model.Proprietario.CodiceFiscale</p>
    </div>
}
else
{
    <p>Nessun proprietario associato.</p>
}

<div class="form-group mt-4">
    <a asp-action="Index" class="btn btn-primary">Torna alla lista</a>
</div>
