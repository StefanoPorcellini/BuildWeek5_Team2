@model IEnumerable<ClinicaVeterinaria.Models.CasaFarmaceutica>

@{
    ViewData["Title"] = "Lista Case Farmaceutiche";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Email</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Indirizzo</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="EditCasaFarmaceutica" asp-route-id="@item.Id" class="btn btn-warning">Modifica</a>
                    <form asp-action="DeleteCasaFarmaceutica" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Elimina</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
