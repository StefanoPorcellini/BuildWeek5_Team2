@model IEnumerable<ClinicaVeterinaria.Models.Prodotto>

@{
    ViewData["Title"] = "Lista Prodotti";
}

<h1><img src="~/img/logo piccolo.svg" /> @ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Prezzo</th>
            <th>Tipologia</th>
            <th>Numero Armadietto</th>
            <th>Numero Cassetto</th>
            <th>Casa Farmaceutica</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Prezzo.ToString("C")</td> <!-- Prezzo formattato come valuta -->
                <td>@item.Tipologia</td>
                <td>@item.NumeroArmadietto</td>
                <td>@item.NumeroCassetto</td>
                <td>@item.CasaFarmaceutica.Nome</td>
                <td>
                    <a asp-action="EditProdotto" asp-route-id="@item.Id" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Modifica">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form asp-action="DeleteProdotto" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Elimina">
                            <i class="bi bi-trash3-fill"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
