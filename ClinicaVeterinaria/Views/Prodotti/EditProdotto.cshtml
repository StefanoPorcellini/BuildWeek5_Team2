@model ClinicaVeterinaria.Models.ViewModels.EditProdottoViewModel

@{
    ViewData["Title"] = "Modifica Prodotto";
}

    <h1><img src="~/img/logo piccolo.svg" /> @ViewData["Title"]</h1>

    <form asp-action="EditProdotto" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Nome" class="form-label">Nome del Prodotto</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Prezzo" class="form-label">Prezzo</label>
            <input asp-for="Prezzo" class="form-control" />
            <span asp-validation-for="Prezzo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NumeroArmadietto" class="form-label">Numero Armadietto</label>
            <input asp-for="NumeroArmadietto" class="form-control" />
            <span asp-validation-for="NumeroArmadietto" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NumeroCassetto" class="form-label">Numero Cassetto</label>
            <input asp-for="NumeroCassetto" class="form-control" />
            <span asp-validation-for="NumeroCassetto" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Tipologia" class="form-label">Tipologia</label>
            <select asp-for="Tipologia" class="form-select">
                <option value="Medicinale">Medicinale</option>
                <option value="Alimentare">Alimentare</option>
            </select>
            <span asp-validation-for="Tipologia" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Seleziona Casa Farmaceutica</label>
            <select name="CasaFarmaceuticaId" class="form-select">
                <option value="">-- Seleziona una casa farmaceutica --</option>
                @foreach (var casa in ViewBag.CaseFarmaceutiche)
                {
                    var selectedAttribute = casa.Id == Model.CasaFarmaceuticaId ? "selected=\"selected\"" : "";
                    @Html.Raw($"<option value=\"{casa.Id}\" {selectedAttribute}>{casa.Nome}</option>")
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <input type="submit" value="Salva Modifiche" class="btn btn-primary" />
        </div>
    </form>

    <div>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-short"></i>Torna alla lista</a>
    </div>
