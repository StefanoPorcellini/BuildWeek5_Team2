@{
    ViewData["Title"] = "Home Page";
}

<h1>VetCare &#128054 - Homepage</h1>


<form method="post" asp-action="SearchAnimal" class="border rounded">

    <div class="form-group m-2">
        <h4>Trova animale</h4>
        <label for="chipNumber">Chip Number</label>
        <input type="text" class="form-control" id="chipNumber" name="chipNumber" required />
    <button type="submit" class="btn btn-primary my-3"><i class="bi bi-search"></i> Search</button>
    </div>
</form>

@* @await Html.PartialAsync("~/Views/Animali/Index.cshtml")
 *@
@if (ViewBag.Message != null)
{
    var animal = (ClinicaVeterinaria.Models.Animale)ViewBag.Animal;
    <div class="card mt-3">
        <div class="card-header">
            Animal Details
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @animal.Nome</p>
            <p><strong>Type:</strong> @animal.TipologiaAnimale</p>
            <p><strong>Color:</strong> @animal.ColoreManto</p>
            <p><strong>Birth Date:</strong> @animal.DataNascita?.ToString("dd/MM/yyyy")</p>
            <p><strong>Chip Number:</strong> @animal.NumeroChip</p>
        </div>
    </div>
}
else
{
        <div class="alert alert-info text-center">Il tuo animale non è qui</div>
}
