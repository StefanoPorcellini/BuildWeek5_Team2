@model ClinicaVeterinaria.Models.Cliente

@{
    ViewData["Title"] = "Dettagli Cliente";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                @if (Model.Proprietario != null)
                {
                    <dt class="col-sm-3">Proprietario</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Proprietario.Id)</dd>
                }

                @if (!string.IsNullOrEmpty(Model.TipologiaAnimale))
                {
                    <dt class="col-sm-3">Tipologia Animale</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.TipologiaAnimale)</dd>
                }

                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Cognome</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cognome)</dd>

                <dt class="col-sm-3">Telefono</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3">Indirizzo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Indirizzo)</dd>

                <dt class="col-sm-3">Città</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Citta)</dd>

                <dt class="col-sm-3">Codice Fiscale</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CodiceFiscale)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary"><i class="bi bi-pencil"></i></a>
        <a asp-action="Index" class="btn btn-secondary ml-2"><i class="bi bi-arrow-left-short"></i>Torna alla Lista</a>
    </div>
</div>
