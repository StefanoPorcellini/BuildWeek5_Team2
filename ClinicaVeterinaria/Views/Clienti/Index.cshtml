@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Gestione Clienti e Proprietari";
}

<h1><img src="~/img/logo piccolo.svg" /> @ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Crea Nuovo Cliente</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Cognome</th>
                    <th>Telefono</th>
                    <th>Indirizzo</th>
                    <th>Città</th>
                    <th>Codice Fiscale</th>
                    <th class="text-center">Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var tipo = item.Tipo;
                    if (tipo == "Cliente")
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Cognome</td>
                            <td>@item.Telefono</td>
                            <td>@item.Indirizzo</td>
                            <td>@item.Citta</td>
                            <td>@item.CodiceFiscale</td>
                            <td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Modifica</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Dettagli</a>
                            </td>                            </td>
                        </tr>
                    }
                    else if (tipo == "Proprietario")
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Cognome</td>
                            <td>@item.Telefono</td>
                            <td>@item.Indirizzo</td>
                            <td>@item.Citta</td>
                            <td>@item.CodiceFiscale</td>
                            <td>
                            <td class="text-center">
                            <a asp-controller="Proprietari" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i>Modifica</a>
                            <a asp-controller="Proprietari" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="bi bi-eye-fill"></i>Dettagli</a>
                            </td>                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Tipo non riconosciuto</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>



