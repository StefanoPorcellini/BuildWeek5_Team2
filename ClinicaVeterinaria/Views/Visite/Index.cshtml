@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Storico visite";
}

<h1><img src="~/img/logo piccolo.svg" /> @ViewData["Title"]</h1>
<div>
    <a asp-action="Create" class="btn btn-primary">Crea Nuova Visita</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data Visita</th>
            <th>Animale</th>
            <th>Anamnesi</th>
            <th>Cura</th>
            <th>Prezzo</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visita in Model)
        {
            <tr>
                <td>@visita.Id</td>
                <td>@visita.DataVisita</td>
                <td>@visita.AnimaleNome</td>
                <td>@visita.Anamnesi</td>
                <td>@visita.Cura</td>
                <td>@visita.Prezzo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@visita.Id" class="btn btn-info">Dettagli</a>
                    <a asp-action="Edit" asp-route-id="@visita.Id" class="btn btn-warning">Modifica</a>
                </td>
            </tr>
        }
    </tbody>
</table>