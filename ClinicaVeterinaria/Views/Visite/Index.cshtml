@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Storico visite";
}

<h1><img src="~/img/logo piccolo.svg" /> @ViewData["Title"]</h1>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Crea Nuova Visita</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Data Visita</th>
            <th>Animale</th>
            <th>Anamnesi</th>
            <th>Cura</th>
            <th>Prezzo</th>
            <th class="text-center">Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visita in Model)
        {
            <tr>
                <td>@visita.Id</td>
                <td>@visita.DataVisita.ToString("dd/MM/yyyy")</td>
                <td>@visita.AnimaleNome</td>
                <td>@visita.Anamnesi</td>
                <td>@visita.Cura</td>
                <td>@visita.Prezzo.ToString("C")</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@visita.Id" class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="top" title="Dettagli">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@visita.Id" class="btn btn-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Modifica">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
