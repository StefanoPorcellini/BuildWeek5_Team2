@model ClinicaVeterinaria.Models.Visita

@{
    ViewData["Title"] = "Create";
}

<h1>VetCare - Crea</h1>

<h4>Visita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DataVisita" class="control-label">Data Visita</label>
                <input asp-for="DataVisita" class="form-control" readonly="readonly" value="@Model.DataVisita.ToString("yyyy-MM-dd HH:mm:ss")" />
                <span asp-validation-for="DataVisita" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AnimaleId" class="control-label">Animale</label>
                <select asp-for="AnimaleId" class="form-control" asp-items="ViewBag.AnimaleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Anamnesi" class="control-label"></label>
                <input asp-for="Anamnesi" class="form-control" />
                <span asp-validation-for="Anamnesi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cura" class="control-label"></label>
                <input asp-for="Cura" class="form-control" />
                <span asp-validation-for="Cura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezzo" class="control-label"></label>
                <input asp-for="Prezzo" class="form-control" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Crea" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Indietro alla lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}