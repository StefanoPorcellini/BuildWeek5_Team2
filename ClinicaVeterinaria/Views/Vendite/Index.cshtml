@model IEnumerable<ClinicaVeterinaria.Models.Vendita>

@{
    ViewData["Title"] = "Index";
}

<h1>VetCare - Vendite</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crea nuova vendita</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Codice Fiscale Cliente</th>
            <th>Data Vendita</th>
            <th>Prodotto</th>
            <th>Prezzo</th>
            <th>Numero Ricetta</th>
            <th>Quantita</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CodiceFiscaleCliente</td>
                <td>@item.DataVendita.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Prodotto.Nome</td>
                <td>@item.Prodotto.Prezzo.ToString("C")</td>
                <td>@item.NumeroRicetta</td>
                <td>@item.Quantita</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Modifica</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Dettagli</a> 
                    <a asp-action="GeneratePDFPerVendita" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Genera PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>
